<resources>

    <style name="sobot_demo_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@color/sobot_btn_background_color</item>
        <item name="android:textColor">@color/sobot_btn_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sobot_demo_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/sobot_btn_background_color</item>
        <item name="android:textColor">@color/sobot_btn_text_color</item>
    </style>

    <style name="sobot_person_set_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/sobot_textview_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sobot_person_set_edittext_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/sobot_edittext_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:background">@color/sobot_btn_text_color</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="sobot_product_se_edittext_style">
        <item name="android:textColorHint">#888888</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/sobot_edittext_text_color</item>
        <item name="android:background">@color/sobot_btn_text_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="sobot_checkbox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:button">@drawable/sobot_checkbox_style</item>
        <item name="android:textColor">@color/sobot_checkbox_text_color</item>
    </style>
</resources>